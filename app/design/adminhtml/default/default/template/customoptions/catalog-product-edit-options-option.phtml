productChildrenOptions = {
    show: function(IGI, event) {        
        optionId = this.getOptionId($$('input.igi[value="'+IGI+'"]').first().id);        
        selectedIds = this.parseChildrenIds($('dependent_ids_'+IGI).value, true);        
        
        var HTML = '';
