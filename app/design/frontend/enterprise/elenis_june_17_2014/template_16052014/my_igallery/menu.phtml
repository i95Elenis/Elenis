/**
 * Category left navigation
 *
 * @see Mage_Catalog_Block_Navigation
 */
?>
<?php $collection = $this->_getCollection(); ?>
<?php if (count($collection) > 0) : ?>
<div class="my-igallery-block block-igallery">
    <div class="block-title">
        <strong><span><?php echo $this->__('Album') ?></span></strong>
    </div>
    <div class="block-content">
        <ul class="empty">
            <li>
                <ol>
                <?php $UrlModel = Mage::getSingleton('core/url'); ?>
                <?php foreach ($collection as $_category): ?>
                <li>
                    <?php if ($_category->getFriendlyUrl()) : ?>
                    <a href="<?php echo $UrlModel->getDirectUrl($_category->getFriendlyUrl()); ?>">
                    <?php echo $this->htmlEscape($_category->getName()) ?></a>
                    <?php else : ?>
                    <a href="<?php echo $this->getUrl('igallery/category/view/', array('id' => $_category->getId())); ?>"><?php echo $this->htmlEscape($_category->getName()) ?></a>
                    <?php endif; ?>
                </li>
                <?php endforeach ?>
                </ol>
            </li>
        </ul>
    </div>
</div>
<?php endif; ?>