<?xml version="1.0"?>
<config>
	  <tabs>
		<elenistab translate="label" module="catalognavigation">
            <label>Elenis Tab</label>
            <sort_order>0</sort_order>
        </elenistab>
	  </tabs>
	  <sections>
		<elenissec  translate="label" module="catalognavigation">                    
		<label>Elenis Section</label>
		<tab>elenistab</tab>
		<frontend_type>text</frontend_type>
		<sort_order>0</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>            
					<groups>
				      <elenisgrp translate="label"> 
					  <label>Elenis Group</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>0</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
                          <elenisfld1 translate="label">
                            <label>Enable Catalog Rewrite</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>yes for enable no for disable</comment>
                          </elenisfld1>
                          <elenisexcludenav translate="label">
                            <label>Exclude Top Navigation Handling</label>
                            <comment>This will exclude the navigation handling for parent categories</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </elenisexcludenav>
                        <shippingterms translate="label">
                            <label>Delivery Options Text</label>
                            <comment>Delivery Options Text</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </shippingterms>
                        <eleniscatlevel translate="label">
                            <label>Define Level</label>
                            <comment>This will define the level for categories handling</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </eleniscatlevel>
                        
					   </fields>
					   </elenisgrp>
					</groups>
		</elenissec>
	  </sections>
</config>
