<config>
    <menu>
        <catalog>
            <children>
                <customoptions translate="title" module="customoptions">
                    <title>Advanced Product Options</title>
                    <sort_order>3</sort_order>
                    <action>mageworx/customoptions_options/</action>
                    <depends>
                        <config>mageworx_catalog/customoptions/enabled</config>
                    </depends>
                </customoptions>
            </children>
        </catalog>
    </menu>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <catalog>
                        <children>
                            <customoptions translate="title" module="customoptions">
                                <title>Advanced Product Options</title>
                            </customoptions>
                        </children>
                    </catalog>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <mageworx_catalog translate="title" module="mageworx">
                                        <title>MageWorx &gt; Catalog</title>
                                        <sort_order>1</sort_order>
                                        <children>
                                            <customoptions translate="title" module="customoptions">
                                                <title>Advanced Product Options</title>
                                            </customoptions>
                                        </children>
                                    </mageworx_catalog>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
</config>
