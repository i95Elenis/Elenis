<config>
   <modules>
        <Webshopapps_Timegrid>
            <version>0.0.5</version>
    </Webshopapps_Timegrid>
    </modules>
    <admin>
	    <routers>
			<timegrid>
				<use>admin</use>
				<args>
					<module>Webshopapps_Timegrid</module>
					<frontName>timegrid</frontName>
				</args>
			</timegrid>
	    </routers>
    </admin>
     <adminhtml>
    	  	<menu>
    		 	<catalog>
    				<children>
    					<timegrid translate="title" module="timegrid">
    								<title>WebShopApps Delivery Date Shipping</title>
    								<sort_order>200</sort_order>
    							  <action>timegrid/adminhtml_timegrid</action>
    					</timegrid>
    				</children>
    			</catalog>
    		</menu>
    		<acl>
    			<resources>
    				<admin>
                        <children>
                            <catalog>
                                <children>
                                    <config>
                                        <children>
                                            <timegrid>
                                                <title>WebShopApps Delivery Date Shipping</title>
                                            </timegrid>
                                        </children>
                                    </config>
                                </children>
                            </catalog>
                            <catalog>
                                <children>
                                    <timegrid translate="title">
                                        <title>WebShopApps Delivery Date Shipping</title>
                                        <sort_order>40</sort_order>
                                    </timegrid>
                                </children>
                            </catalog>
                        </children>
                    </admin>
    			</resources>
    		</acl>
		<layout>
			<updates>
				<timegrid>
					<file>webshopapps_timegrid.xml</file>
				</timegrid>
			</updates>
		</layout>
    </adminhtml>
 <global>
    <models>
      <timegrid>
        <class>Webshopapps_Timegrid_Model</class>
        <resourceModel>timegrid_mysql4</resourceModel>
      </timegrid>
		<timegrid_mysql4>
			<class>Webshopapps_Timegrid_Model_Mysql4</class>
			<entities>
				<timegrid>
					<table>wsa_timegrid</table>
                </timegrid>
			</entities>
      </timegrid_mysql4>
    </models>
    <resources>
      <timegrid_setup>
        <setup>
          <module>Webshopapps_Timegrid</module>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
              </timegrid_setup>

            <timegrid_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </timegrid_write>
            <timegrid_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </timegrid_read>
    </resources>
	<blocks>
		<timegrid>
		    <class>Webshopapps_Timegrid_Block</class>
		</timegrid>
 	</blocks>
        <helpers>
            <timegrid>
                <class>Webshopapps_Timegrid_Helper</class>
            </timegrid>
        </helpers>

  </global>

</config>
