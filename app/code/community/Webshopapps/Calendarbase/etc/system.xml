<config>
    <sections>
        <shipping translate="label" module="shipping">
            <groups>
                <webshopapps_dateshiphelper translate="label">
                    <fields>
                        <heading_slots translate="label">
                            <label>Time Slots</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>500</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </heading_slots>
                        <num_slots translate="label">
                            <label>Number of Time Slots</label>
                            <frontend_type>select</frontend_type>
                            <source_model>calendarbase/calendarbase_source_timeslots</source_model>
                            <sort_order>520</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </num_slots>
                        <default_avail_slots translate="label">
                            <label>Default Number of Orders Allowed per Slot</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>530</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Set to -1 for infinite availability</comment>
                        </default_avail_slots>
                        <slot_1 translate="label">
                            <label>Slot 1</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>540</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Leave blank if you do not wish to display time slots</comment>
                        </slot_1>
                        <slot_2 translate="label">
                            <label>Slot 2</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>550</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </slot_2>
                        <slot_3 translate="label">
                            <label>Slot 3</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>560</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </slot_3>
                        <slot_4 translate="label">
                            <label>Slot 4</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>570</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </slot_4>
                        <slot_5 translate="label">
                            <label>Slot 5</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>580</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </slot_5>
                        <slot_6 translate="label">
                            <label>Slot 6</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>590</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </slot_6>
                        <heading_display translate="label">
                            <label>Display Options</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>620</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </heading_display>
                        <ship_options translate="label">
                            <label>Options</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>calendarbase/calendarbase_source_shipoptions</source_model>
                            <sort_order>630</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </ship_options>
                        <custom_text_1 translate="label">
                            <label>Information text line 1</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>640</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_text_1>
                        <custom_text_2 translate="label">
                            <label>Information text line 2</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>650</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_text_2>
                        <num_of_weeks translate="label">
                            <label>Number of Weeks to Display</label>
                            <frontend_type>select</frontend_type>
                            <source_model>calendarbase/calendarbase_source_numofweeks</source_model>
                            <sort_order>660</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Set to -1 for infinite availability</comment>
                        </num_of_weeks>
                        <dates_at_checkout translate="label">
                            <label>Number of rates to show on cart page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>calendarbase/calendarbase_source_numofdatesatcheckout</source_model>
                            <sort_order>670</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Choose the number of rates to display on the cart estimator.</comment>
                        </dates_at_checkout>
                    </fields>
                </webshopapps_dateshiphelper>
            </groups>
        </shipping>
    </sections>
</config>
